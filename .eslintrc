{
	"extends": ["eslint:recommended"],

	"env": {
		"amd": true,
		"browser": true,
		"es6": true,
		"node": true
	},

	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},

	"settings": {
		"import/resolver": "webpack"
	},

	"rules": {
		"array-callback-return": 2,
		"arrow-body-style": ["error", "always"],
		"curly": [2, "all"],
		"default-case": 2,
		"dot-notation": 2,
		"eqeqeq": 2,
		"no-alert": 2,
		"no-caller": 2,
		"no-console": ["error", { "allow": ["warn", "error"] }],
		"no-duplicate-imports": 2,
		"no-else-return": 2,
		"no-empty-function": 2,
		"no-eq-null": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-extra-label": 2,
		"no-implicit-globals": 2,
		"no-implied-eval": 2,
		"no-invalid-this": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-str": 2,
		"no-new-func": 2,
		"no-new-wrappers": 2,
		"no-param-reassign": 2,
		"no-proto": 2,
		"no-return-assign": 2,
		"no-script-url": 2,
		"no-self-compare": 2,
		"no-sequences": 2,
		"no-shadow": 2,
		"no-throw-literal": 2,
		"no-undef-init": 2,
		"no-unmodified-loop-condition": 2,
		"no-unused-expressions": 2,
		"no-use-before-define": [2, { "functions": false }],
		"no-useless-call": 2,
		"no-useless-concat": 2,
		"no-void": 2,
		"no-warning-comments": [
			0,
			{ "terms": ["todo", "fix"], "location": "anywhere" }
		],
		"no-with": 2,
		"radix": 2,
		"strict": 2,
		"vars-on-top": 2,
		"yoda": 2
	}
}
